with [get-view "Location Pool" | get-tree] {
    key-type "M1+a"
    key-type Del
}
get-view Mapping | get-combo -after [get-label "Mapping base:"] | select test
with [get-view Navigator | get-tree] {
    select "test/test2.txt" | click -default
    select "test/test2.txt" | double-click
}
with [get-editor "test2.txt" | get-text-viewer] {
    set-caret-pos 1 6
    select-range 1 5 1 6
    get-menu "Mapping/Add Location to Pool" | click
}
with [get-view "Location Pool" | get-tree] {
    get-item c | get-property caption | equals c | verify-true
    get-item c | get-property checked | equals false | verify-true
}
get-editor "test2.txt" | get-text-viewer | set-caret-pos 1 12
